drop database if exists gametoday;
create database gametoday;
use gametoday;

create table autore(
AuNickname Varchar(30),
AuNome Varchar(20),
AuCognome Varchar(20),
AuAvatar int,
REffettuate int,
RCommissionate Varchar(100),
AuEmail Varchar(20),
Scadenza date,
AuPW Varchar(30),
AuLike int,
AuDislike int,
primary key(AuNickname)
);

create table utente( 
UtNickname Varchar(30),
UtNome Varchar(20),
UtCognome	Varchar(20),
ValEffettuate int,
UtEmail Varchar(30),
UtPW Varchar(30),
UtLike Int,
UtDislike Int,
UtAvatar int,
UtTipologia Varchar(30),
primary key(UtNickname)
);

create table amministratore(
AmNickname Varchar(30),
AmNome Varchar(20),
AmCognome Varchar(20),
AmAvatar int,
AmEmail Varchar(30),
AmPW Varchar(30),
VideogiochiInseriti int,
primary key(AmNickname)
);

create table videogioco( 
Titolo Varchar(50),
Pegi Int,
TotaleVoti Int,
CasaProduttrice Varchar(50),
MediaValutazioni Double,
Piattaforma	Varchar(20),
DataPubblicazione Date,
Tipologia Varchar(20),
primary key(Titolo)
);

create table recensione( 
Codice Varchar(30),
AuNickname Varchar(30),
RData Date,
RTesto Varchar(3500),
AuNome Varchar(30),
Titolo Varchar(50),
foreign key (Titolo) references videogioco(Titolo)
on update cascade
on delete cascade,
primary key(Codice)
);

create table commento(   
CommentoCod Varchar(30),
Codice Varchar(30),
CLike Int,
CDislike Int,  
CTesto Varchar(1500),
primary key(CommentoCod)
);

create table interazioneAutore(
CommentoCod  Varchar(30),
AuNickname Varchar(30),
AUL boolean,
AUD boolean,
primary key(CommentoCod, AuNickname)
);

create table interazioneUtente(
CommentoCod  Varchar(30),
UtNickname Varchar(30),
UTL boolean,
UTD boolean,
primary key(CommentoCod, UtNickname)
);

create table verifica(
CommentoCod  Varchar(30),
AmNickname Varchar(30),
primary key(CommentoCod, AmNickname)
);

create table visione(
AuNickname Varchar(30),
Titolo  Varchar(50),
primary key(AuNickname, Titolo)
);

create table valutazione(
UtNickname Varchar(30),
Titolo  Varchar(50),
primary key(UtNickname, Titolo)
);

create table gestione(
AmNickname Varchar(30),
Titolo  Varchar(50),
primary key(AmNickname, Titolo)
);

create table supervisione(
AmNickname Varchar(30),
Codice  Varchar(50),
primary key(AmNickname, Codice)
);


